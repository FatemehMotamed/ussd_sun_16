<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#155882">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/header"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@android:color/holo_orange_light"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:src="@drawable/call_now"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@android:color/holo_orange_light"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:src="@drawable/add4"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/favorite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite"
                android:textSize="24dp" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24" />




    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/mci_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mci"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:id="@+id/rightel_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/rightel"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:id="@+id/irancel_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/irancel"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"/>



        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>